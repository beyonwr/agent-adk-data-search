version: '3.8'

services:
  # Example: Mount local code for development
  app:
    volumes:
      - ./agents:/app/agents  # Live code reload
      - ./run.py:/app/run.py
    environment:
      LOG_LEVEL: DEBUG  # More verbose logging

  # Example: Expose additional ports
  postgres:
    ports:
      - "5433:5432"  # Use different local port

